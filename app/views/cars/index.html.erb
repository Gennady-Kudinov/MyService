<p style="color: green"><%= notice %></p>

<h3>Cars Страница из app/views/cars/index.html.erb </h3>

<div class="position-fixed position-absolute srart-50 end-0 translate-middle-y" style="max-width: 540px;">
<%= form_tag cars_path, :method => 'get' do %>
  <div class="text-dark bg-warning">
    <p> Введите номер автомобиля для поиска</p>
  </div>
  <%= text_field_tag (:search), params[:search] %>
  <%= submit_tag "Поиск" %>
  <%= link_to "New car", new_car_path %></div>
  <% end %><br>
</div>

<div id="cars">
  <% @cars.each do |car| %>
    <%= render car %>
    <p>
      <%= link_to "Show this car", car %>
    </p>
  <% end %>
</div>

<div class="position-fixed"><%= link_to "New car", new_car_path %></div>
