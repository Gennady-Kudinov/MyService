<div class="box">
  <%= render @car %>
  <div class="columns is-11">
    <div class="column is-4">
      <%= link_to "Редактировать машину", edit_car_path(@car), class: "button mr-5" %>
    </div>
    <div class="column is-4">
      <%= link_to "Посмотреть все машины", cars_path, class: "button" %>
    </div>
    <div class="column is-4">
      <%= button_to "Удалить", @car, method: :delete, class: "button is-danger" %>  
    </div>
  </div>
</div>
