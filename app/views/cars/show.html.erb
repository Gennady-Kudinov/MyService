<div class="box">
  <%= render @car %>
  <div class="columns is-variable is-2-desktop">
    <div class="column is-2">
      <%= link_to "Редактировать машину", edit_car_path(@car), class: "button" %>
    </div>
    <div class="column is-2">
      <%= link_to "Посмотреть все машины", cars_path, class: "button" %>
    </div>
    <div class="column">
      <%= button_to "Удалить", @car, method: :delete, class: "button is-danger" %>  
    </div>
  </div>
</div>
