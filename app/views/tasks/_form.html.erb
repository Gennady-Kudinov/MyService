<%= form_for task do |f| %>
  <div class="field mt-5">
    <div class="control">
      <%= f.date_field :date, as: :date, html5: true %> 
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_field :name, class: "input", placeholder: "Название задачи" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_area :description, class: "textarea", placeholder: "Описание задачи" %> 
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= link_to "Cancel", tasks_path, class: "button" %> 
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit "Добавить", class: "button is-success" %>
    </div>
  </div>
<% end %>
