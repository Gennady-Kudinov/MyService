<div class="columns is-centered">
  <div class="column is-8">
    <h2 class="title is-3 mb-6">Пожалуйста авторизируйтесь</h2>
    <%= form_for @user, url: login_path(@user) do |user| %> 
      <div class="field my-5">
        <div class="control">
          <%= user.text_field :name, class: "input", placeholder: 'логин' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= user.password_field :password, class: "input", placeholder: 'пароль'%>
        </div>
      </div>

      <div class="mt-5">
        <%= user.submit "Войти", class: "button is-primary"%>
      </div>
    <% end %>
      <div class="button is-warning">
        <%= link_to "Я не зарегистрирован", new_user_path %>
      </div>
  </div>
</div>


