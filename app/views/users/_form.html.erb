<div class="depot_form">

  <%= form_with(model: user, local: true) do |form| %> <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %>
      prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %> <li><%= message %></li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Имя:' %>
    <%= form.text_field :name, size: 40, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :password, 'Пароль:' %>
    <%= form.password_field :password, size: 40, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Повторный пароль:' %>

    <%= form.password_field :password_confirmation,
      id: :user_password_confirmation, size: 40, class: "form-control" %>
  </div>

  <div class="actions mt-4">
    <%= form.submit %>
  </div>
<% end %> 

</div>
