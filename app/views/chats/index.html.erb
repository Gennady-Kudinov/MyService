<div class="columns is-centered">
  <div class="column is-4">
    <h1 class="subtitle is-2">Список чатов</h1>
    <ul>
      <% @chats.each do |chat| %> 
        <li class="my-2"><%= link_to chat.name, chat_path(chat), class: "link" %></li>  
      <% end %> 
    </ul>
  </div>
  <div class="columns is-flex is-flex-direction-column">

    <div class="box" style="overflow: scroll; height: 450px; width: 600px;">
      <div class="column">
        <div class="">
          <% if @single_chat %> 
            <h4 class="subtitle is-5 mb-5 has-text-centered">Чат с <%= @single_chat.name %></h4>
            <%= render @messages %> 
          <% end %> 
        </div> 
      </div>   
    </div>

    <div class="column">
      <%= render 'new_message_form' %>
    </div>
  </div> 
</div>
