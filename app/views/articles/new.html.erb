<h1>Новая статья</h1>

<!- обязательно добaвлять  data: { turbo: false } - так как изменились Релься, -->
<!- иначе не будет отображаться результат на странице -->

<%= form_for :article, data: { turbo: false }, url: articles_path do |f| %>

  <!-  # вывод сообщения об ошибке -->
  <% if @article && @article.errors.any? %>
    <p>
    <ul>
      <%= @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </p>
  <% end %>

  <p>
    <%= f.label :Автор %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :Название %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Send message' %>
  </p>

<% end %>