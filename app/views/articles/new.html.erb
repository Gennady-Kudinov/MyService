<h1>Новый вопрос</h1>

<%= form_for :article, data: { turbo: false }, url: articles_path do |f| %>

  <!-  # вывод сообщения об ошибке -->
  <% if @article && @article.errors.any? %>
    <p>
      <ul>
        <%= @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </p>
  <% end %>

  <p>
    <%= f.label :Автор %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :Введите_текст %>
    <%= f.text_area :text, class: "input" %>
  </p>

    <div class="field">
      <%= f.label :image, 'Можно приложить Фото, Скрин до 5мгб' %>
      <div class="control">
        <%= f.file_field :image %>
      </div>
    </div>

  <br>
  <p>
    <%= f.submit 'Отправить сообщение' %>
  </p>

<% end %>