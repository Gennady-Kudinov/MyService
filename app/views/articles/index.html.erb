app/views/articles/index.html.erb
<p style="color: green"><%= notice %></p>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%#= link_to "Показать сообщение", article, class: "button is-primary" %>
    </p>
  <% end %>
</div>

<br>

<div style="position: fixed; bottom: 0; right: 0; background-color: #fff; padding: 10px;">
  <%= link_to "Нажмите для создания нового сообщения", new_article_path, style: "color: yelow", class: "button is-info" %>
</div>