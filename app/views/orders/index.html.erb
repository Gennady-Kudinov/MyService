<div class="container">

  <h1>История ордеров клиента</h1>
  <%= link_to "Добавить новый ордер", new_order_path, class: "btn btn-primary" %>
  <% @orders.each_with_index do |order, index| %>  

    <table>
      <td>
        <th>Проблемы</th>
        <th>Выполненая работа</th>
        <th>Стоимость</th>
        <th>Статус</th>
        <th>Действия</th>
      </td>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td>
          <%= order.problem %> 
        </td>
        <td>
          <%= order.work_description %> 
        </td>
        <td>
          <%= order.price %>    
        </td>
        <% if order.status %> 
          <td>Ордер выполнен</td>
        <% else %> 
          <td>На выполнении</td>
        <% end %> 
        <td>
          <%= link_to "Посмотреть", order_path(order) %> 
          <%= link_to "Редактировать", edit_order_path(order) %>
          <%= link_to "Удалить" %> 

        </td>
      </tr>
    </table>
  <% end %> 

</div>
