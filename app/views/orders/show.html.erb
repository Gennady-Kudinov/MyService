<div class="container">

  <h1>История ордеров клиента <%= @client.name %></h1>
  <%= link_to "Добавить новый ордер", new_order_path, class: "btn btn-primary" %>
  <% @client.orders.each_with_index do |order, index| %>  

    <table>
      <td>
        <th>Проблемы</th>
        <th>Выполненая работа</th>
        <th>Стоимость</th>
        <th>Статус</th>
      </td>
      <tr>
        <td>
          <%= index + 1 %>
        </td>
        <td>
          <%= order.problem %> 
        </td>
        <td>
          <%= order.work_description %> 
        </td>
        <td>
          <%= order.price %>    
        </td>
        <% if order.status %> 
          <td>Ордер выполнен</td>
        <% else %> 
          <td>На выполнении</td>
        <% end %> 

      </tr>
    </table>
  <% end %> 

</div>
